        <ul class="menu horizontal black">
          <div class="column-group horizontal-gutters">

            <div class="all-10 nav-links">
              <li>
                <a href="#">A-C</a>
                <ul class="submenu">
                  <% Character.sort_abc.each do |hero| %>
                    <li><a href="/characters/<%= hero.id %>"><%= hero.character_name %></a></li>
